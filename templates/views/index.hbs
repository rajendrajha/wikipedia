<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{title}}</title>
    <style>
      body{
        padding: 0;
        margin: 0;
      }
        .container {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    max-width: 1200px;
    margin: auto;
    margin-top: 120px;
    padding: 20px;
}

.logo {
    width: 200px;
    height: auto;
    margin-bottom: 20px;
}

    </style>
  </head>
  <body>
    {{>header}}
    <h1>{{title}}</h1>
    <p id="para"></p>
    <script>
      let url=
      'https://en.wikipedia.org/w/api.php?format=json&action=query&origin=*&prop=extracts&exintro&explaintext&redirects=1&titles=';
      fetch(url+document.title).then(response=>
      response.json()).then(response=>{
        var pageid= Object.keys(response.query.pages)[0];
        var extract= response.query.pages[pageid].extract;
        document.getElementById('para').innerText=extract
        })

    </script>
  </body>
</html>